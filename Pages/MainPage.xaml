<Page x:Class="VRCLogManager.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      Title="MainPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>
    <Border BorderBrush="Black"
            BorderThickness="1,1,0,0" />
    <Border Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="1,1,0,0" />
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="70" />
      </Grid.ColumnDefinitions>
      <Button Grid.Column="1"
              Margin="4,4,4,4"
              Click="OnClick_DB"
              Content="DBメンテ" />
    </Grid>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="250" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Border BorderBrush="Black"
              BorderThickness="1,1,1,1" />
      <Grid Margin="4,4,4,4">
        <Grid.RowDefinitions>
          <RowDefinition Height="30" />
          <RowDefinition Height="30" />
          <RowDefinition Height="4" />
          <RowDefinition Height="30" />
          <RowDefinition Height="30" />
          <RowDefinition Height="20" />
          <RowDefinition Height="4" />
          <RowDefinition Height="30" />
          <RowDefinition Height="30" />
          <RowDefinition Height="20" />
          <RowDefinition Height="4" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="60" />
          </Grid.ColumnDefinitions>
          <TextBlock Margin="2,2,2,2"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Text="開始日付" />
          <DatePicker x:Name="datePicker1"
                      Grid.Column="1"
                      Margin="2,2,2,2"
                      FontSize="14"
                      SelectedDate="{Binding Source={x:Static System:DateTime.Today}, Mode=OneTime}"
                      SelectedDateChanged="datePicker1_SelectedDateChanged" />
          <TextBlock Grid.Column="2"
                     Margin="2,2,2,2"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Text="～" />
        </Grid>
        <Grid Grid.Row="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="60" />
          </Grid.ColumnDefinitions>
          <TextBlock Margin="2,2,2,2"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Text="終了日付" />
          <DatePicker x:Name="datePicker2"
                      Grid.Column="1"
                      Margin="2,2,2,2"
                      FontSize="14"
                      SelectedDate="{Binding Source={x:Static System:DateTime.Today}, Mode=OneTime}"
                      SelectedDateChanged="datePicker1_SelectedDateChanged" />
        </Grid>
        <Grid Grid.Row="3">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="70" />
          </Grid.ColumnDefinitions>
          <TextBlock Margin="2,2,2,2"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Text="プレイヤー指定" />
          <CheckBox Grid.Column="1"
                    VerticalAlignment="Center"
                    Content="完全一致"
                    IsChecked="{Binding PlayerExtraMatch, Mode=Twoway}" />
        </Grid>
        <ComboBox Name="cmbPlayer"
                  Grid.Row="4"
                  Margin="2,2,2,2"
                  DisplayMemberPath="PlayerName"
                  IsEditable="true"
                  ItemsSource="{Binding PlayerList, Mode=Twoway}"
                  SelectedItem="{Binding SelectedItem_Player, Mode=Twoway}"
                  SelectedValuePath="PlayerID"
                  Text=""
                  SelectionChanged="cmbPlayer_SelectionChanged"
                  KeyDown="cmbPlayer_KeyDown" />
        <TextBox Grid.Row="5"
                 Margin="2,2,2,2"
                 VerticalContentAlignment="Center"
                 FontSize="11.5"
                 FontFamily="ＭＳ ゴシック"
                 IsReadOnly="True"
                 Text="{Binding PlayerID, Mode=Twoway}" />
        <Grid Grid.Row="7">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="70" />
          </Grid.ColumnDefinitions>
          <TextBlock Margin="2,2,2,2"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Text="ワールド指定" />
          <CheckBox Grid.Column="1"
                    VerticalAlignment="Center"
                    Content="完全一致"
                    IsChecked="{Binding WorldExtraMatch, Mode=Twoway}" />
        </Grid>
        <ComboBox Grid.Row="8"
                  Margin="2,2,2,2"
                  IsEditable="true"
                  ItemsSource="{Binding WorldList.WorldName}"
                  Text="{Binding WorldName, Mode=Twoway}" />
        <TextBox Grid.Row="9"
                 Margin="2,2,2,2"
                 IsReadOnly="True"
                 Text="{Binding WorldID}" />
      </Grid>
    </Grid>
  </Grid>
</Page>
